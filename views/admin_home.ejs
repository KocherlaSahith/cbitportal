<% layout('layouts/lboilerplate')%>
<style>
      #box{
      width: auto;
      border: 5px solid black;
      border-radius: 20px;
      padding: 20px;
      margin: 10px;
    }
    body{
        font-family: 'Times New Roman', Times, serif;
        height: 100vh;
          background-image: url('https://images.unsplash.com/photo-1587620962725-abab7fe55159?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1031&q=80');
          background-attachment: fixed;
          background-size: cover;
          color: white;
    }
</style>
<h2>Welcome <%= lst3[0].m_name %>!</h2>
<% for (let campground of lst3){%> 
<% for (let campground2 of higher){%>
    <div id="box"> 
        <h3>STUDENT NAME : <%= campground.s_name %></h3>
        <h3>ISSUE        :<%= campground.message %></h3>
<form action="/send_message/<%= campground.s_name %>/<%=campground.m_name%>/" method="post">
    <br>
    <textarea id="textbox" name="response" rows="4" cols="100">
    </textarea>
    <br>
    <button class="btn btn-info"> Send Message</button>
</form>
<form action="/esculate/<%= campground.s_name %>/<%=campground.m_name%>/<%=campground2.name%>/<%=campground.message%>" method="get">
    <label for ="esbt" style="font-size: 150%;">Not sure? Esculate to HOD </label>
    <button class="btn btn-info" name="esbt">Esculate</button>
</form>     
<% }%> 
<br>
<form action="/solved/<%=campground.s_name%>/<%=campground.m_name%>" method="get">
    <label for="dbt" style="font-size: 150%;">Delete this particular issue </label>        
    <button class="btn btn-info" name="dbt">Delete</button>
    <br>
    </form>
</div>

<% }%>